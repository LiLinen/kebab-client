#!/usr/bin/env php
<?php

require __DIR__.'/../vendor/autoload.php';

use App\Client\KebaberClient;
use App\Command\MeatOptionsCommand;
use App\Command\OrderKebabCommand;
use App\Command\SauceOptionsCommand;
use App\Container\StaticContainer;
use App\DataProvider\MeatProvider;
use Symfony\Component\Console\Application;

$application = new Application();

$container = require __DIR__.'/../config/services.php';

$application->add(new OrderKebabCommand($container->get(MeatProvider::class)));
$application->add(new SauceOptionsCommand());


$application->add(new MeatOptionsCommand(
    $container->get(MeatProvider::class))
);

$application->run();
